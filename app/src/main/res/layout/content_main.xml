<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:layout="@layout/content_main"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:weightSum="1"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="S.No: "
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                     />

                <EditText
                    android:id="@+id/sno_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    android:hint="Enter S.No"
                    android:maxLength="3"
                    android:layout_margin="10dp" />





            </LinearLayout>
            <TextView
                android:id="@+id/warn_SNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="14dp"

                android:gravity="center"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1">

                <TextView
                    android:id="@+id/FarmerNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="Name :"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/farmer_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Enter Name"
                    android:layout_margin="10dp"
                    android:layout_weight="0.23" />



















            </LinearLayout>

            <TextView
                android:id="@+id/warn_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="14dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1">

                <TextView
                    android:id="@+id/Age"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="Age : "
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/farmer_age_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    android:hint="Enter Age "
                    android:maxLength="2"
                    android:layout_margin="10dp"
                   />






            </LinearLayout>

            <TextView
                android:id="@+id/warn_Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="14dp"

                android:gravity="center"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/mandalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mandal"
                        android:textSize="20sp"
                        style="bold"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        />



                    <Spinner
                        android:id="@+id/mandal_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/acc_type"
                        android:layout_margin="10dp"
                        />



                </TableRow>
                <TableRow
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/villageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Village"
                        android:textSize="20sp"
                        style="bold"
                        android:textColor="#000000"
                        android:layout_margin="10dp"/>


                    <Spinner
                        android:id="@+id/village_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"/>





                </TableRow>




            </TableLayout>


            <Button
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp"/>

            <ProgressBar
                android:id="@+id/pbbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>











    </ScrollView>
</LinearLayout>